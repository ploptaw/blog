---
layout: base
pagination:
  data: collections.tags
  size: 1
  alias: tag
permalink: /tags/{{ tag | slug }}/
---

<main>
  <h1>Tag: {{ tag }}</h1>
  <hr class="span" />
  <ul>
    {%- for post in collections[tag] -%}
    <li class="post-item">
      <div>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </div>
    </li>
    {%- endfor -%}
  </ul>
</main>
