---
layout: base
pagination:
  data: collections.tags
  size: 1
  alias: tag
permalink: /tags/{{ tag | slug }}/
---

<main>
  <article>
    <h1>Tag: {{ tag }}</h1>

    <ul>
      {%- for post in collections[tag] -%}
      <li class="post-item">
        <div>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </div>
      </li>
      {%- endfor -%}
    </ul>
  </article>
</main>
