---
layout: base
pagination:
  data: collections.tags
  size: 1
  alias: tag
permalink: /tags/{{ tag | slug }}/
---

<main>
  <article>
    <h1>Tag: {{ tag }}</h1>

    <ul>
      {%- for post in collections.all -%} {%- if post.data.tags and (tag in
      post.data.tags) -%}
      <li class="post-item" style="display: flex; margin-bottom: 0.5em">
        <div style="display: flex; align-items: center">
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </div>
      </li>
      {%- endif -%} {%- endfor -%}
    </ul>
  </article>
</main>

<hr class="section-divider" />

<footer>
  <p>
    <a class="button" href="/content/list">← 戻る</a>
  </p>
</footer>
